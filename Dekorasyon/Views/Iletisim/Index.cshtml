@model IletisimForm
@{
    var telefon = (List<Telefon>)ViewBag.Telefon;
    var adres = (List<Adres>)ViewBag.Adres;
    var mail = (List<Mail>)ViewBag.Mail;

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<div class="page-wraper">

    <!-- CONTENT START -->
    <div class="page-content">

        <!-- INNER PAGE BANNER -->
        <div class="sx-bnr-inr overlay-wraper bg-parallax bg-top-center" data-stellar-background-ratio="0.5" style="background-image:url(/images/banner/9.jpg);">
            <div class="overlay-main bg-black opacity-07"></div>
            <div class="container">
                <div class="sx-bnr-inr-entry">
                    <div class="banner-title-outer">
                        <div class="banner-title-name">
                            <h2 class="m-tb0">Bizimle iletişime geçin!</h2>
                        </div>
                    </div>
                    <!-- BREADCRUMB ROW -->

                    <div>
                        <ul class="sx-breadcrumb breadcrumb-style-2">
                            <li><a href="~/">Anasayfa</a></li>
                            <li>İletişim</li>
                        </ul>
                    </div>

                    <!-- BREADCRUMB ROW END -->
                </div>
            </div>
        </div>
        <!-- INNER PAGE BANNER END -->
        <!-- SECTION CONTENTG START -->
        <div class="section-full p-tb80 inner-page-padding">
            <!-- LOCATION BLOCK-->
            <div class="container">

                <!-- GOOGLE MAP & CONTACT FORM -->
                <div class="section-content">
                    <!-- CONTACT FORM-->
                    <div class="row">
                        <div class="col-lg-8 col-md-12 col-sm-12">
                            <form class="contact-form bg-gray p-a30" method="post">
                                <div class="contact-one">

                                    <!-- TITLE START -->
                                    <div class="section-head">
                                        <div class="sx-separator-outer separator-left">
                                            @if (ViewBag.Basarili != null)
                                            {
                                                <div class="alert alert-success">@ViewBag.Basarili</div>
                                            }
                                            @if (ViewBag.Hata != null)
                                            {
                                                <div class="alert alert-danger">@ViewBag.Hata</div>
                                            }

                                            <div class="sx-separator bg-white bg-moving bg-repeat-x" style="background-image:url(/images/background/cross-line2.png)">
                                                <h3 class="sep-line-one">İletişim Formu</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- TITLE END -->

                                    <div class="form-group">
                                        <input name="FullName" type="text" required class="form-control" placeholder="İsim Soyisim">
                                    </div>
                                    <div class="form-group">
                                        <input name="Telefon" type="text" class="form-control" required placeholder="Telefon">
                                    </div>
                                    <div class="form-group">
                                        <input name="Mail" type="text" class="form-control" required placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <input name="Konu" type="text" class="form-control" required placeholder="Konu">
                                    </div>
                                    <div class="form-group">
                                        <textarea name="Icerik" rows="4" class="form-control " required placeholder="Mesaj"></textarea>
                                    </div>
                                    <div class="text-right">
                                        <button type="submit" class="site-button btn-half">
                                            <span> Gönder</span>

                                        </button>
                                    </div>
                                </div>
                            </form>
                            
                        </div>
                        <div class="col-lg-4 col-md-12 col-sm-12">
                            <div class="contact-info block-shadow bg-white bg-center p-a40" style="background-image:url(images/background/bg-map.png)">

                                <div>
                                    <!-- TITLE START -->
                                    <div class="section-head">
                                        <div class="sx-separator-outer separator-left">
                                            <div class="sx-separator bg-white bg-moving bg-repeat-x" style="background-image:url(images/background/cross-line2.png)">
                                                <h3 class="sep-line-one">Info</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- TITLE END -->
                                    <div class="sx-icon-box-wraper left p-b30">

                                        <div class="icon-xs"><i class="fa fa-phone"></i></div>
                                        <div class="icon-content">
                                            <h5 class="m-t0">Telefon numaramız</h5>
                                            @foreach (var item in telefon)
                                            {
                                                <p><span>@item.Tanım</span> 
                                                   <a href="tel:@item.TelefonNo">@item.TelefonNo</a>
                                            </p>
                                            }

                                        </div>
                                    </div>

                                    <div class="sx-icon-box-wraper left p-b30">
                                        <div class="icon-xs"><i class="fa fa-envelope"></i></div>
                                        <div class="icon-content">
                                            <h5 class="m-t0">Email</h5>
                                            @foreach (var item in mail)
                                            {
                                                <p>
                                                    
                                                    <a href="mailto:@item.Mailler">@item.Mailler</a>
                                                </p>
                                            }
                                        </div>
                                    </div>

                                    <div class="sx-icon-box-wraper left">
                                        <div class="icon-xs"><i class="fa fa-map-marker"></i></div>
                                        <div class="icon-content">
                                            <h5 class="m-t0">Adres</h5>
                                            @foreach (var item in adres)
                                            {
                                                <p>
                                                    <span>@item.Tanım</span>
                                                    @item.Adresler
                                                </p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <div class="gmap-outline">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3066.1198573367565!2d32.81772671521381!3d39.78186550192877!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d3423274e2f30b%3A0x47bfec2be9776ed5!2zQW5rYXJhIMOcbml2ZXJzaXRlc2kgQmlsZ2lzYXlhciBNw7xoZW5kaXNsacSfaSBCw7Zsw7xtw7w!5e0!3m2!1str!2str!4v1641667493021!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
        <!-- SECTION CONTENT END -->

    </div>
    <!-- BUTTON TOP START -->
    <button class="scroltop"><span class="fa fa-angle-up  relative" id="btn-vibrate"></span></button>

</div>