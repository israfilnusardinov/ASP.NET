@model IletisimForm
@{
    ViewBag.Title = "Detay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom card-sticky" id="kt_page_sticky_card">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">
                        Iletisim form
                        <i class="mr-2"></i>
                        <small class=""></small>
                    </h3>
                </div>
            </div>
            <div class="card-body">
                <!--begin::Form-->
                <form class="form" method="post" id="frmKayit" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xl-2"></div>
                        <div class="col-xl-8">
                            <div class="my-5">

                                <div class="form-group row">
                                    <label class="col-3">Adı</label>
                                    <div class="col-9">
                                        <input class="form-control form-control-solid" type="text" name="FullName" placeholder="" disabled value="@Model.FullName" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">Telefon No</label>
                                    <div class="col-9">
                                        <input class="form-control form-control-solid" type="text" name="Telefon" placeholder="" disabled value="@Model.Telefon" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">Mail</label>
                                    <div class="col-9">
                                        <input class="form-control form-control-solid" type="text" name="Mail" placeholder="" disabled value="@Model.Mail" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">Konu</label>
                                    <div class="col-9">
                                        <input class="form-control form-control-solid" type="text" name="Konu" placeholder="" disabled value="@Model.Konu" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">İçerik</label>
                                    <div class="col-9">
                                        <textarea id="Icerik" rows="10" class="form-control form-control-solid" disabled name="Icerik">@Model.Icerik</textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3"></label>
                                    
                                    <div class="col-3">
                                        <a href="~/Admin/IletisimForm" class="btn btn-danger" style="width:100%">Listeye Dön</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-2"></div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
        <!--end: Code-->
    </div>
    <!--end::Container-->
</div>