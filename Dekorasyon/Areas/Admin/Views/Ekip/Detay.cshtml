@model Ekip
@{
    ViewBag.Title = "Detay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom card-sticky" id="kt_page_sticky_card">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">
                        Ekip İşlemleri
                        <i class="mr-2"></i>
                        <small class=""></small>
                    </h3>
                </div>
            </div>
            <div class="card-body">
                <!--begin::Form-->
                <form class="form" method="post" id="frmKayit" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xl-2"></div>
                        <div class="col-xl-8">
                            <div class="my-5">
                                @if (ViewBag.Basari != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.Basari
                                    </div>
                                }
                                @if (ViewBag.Hata != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.Hata
                                    </div>
                                }
                                <div class="form-group row">
                                    <label class="col-3">Başlık</label>
                                    <div class="col-9">
                                        <input class="form-control form-control-solid" type="text" name="Baslik" placeholder="" value="@Model.Baslik" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">Ünvan / Sıra No</label>
                                    <div class="col-7">
                                        <input class="form-control form-control-solid" type="text" name="Unvan" placeholder="" value="@Model.Unvan" />
                                    </div>
                                    <div class="col-2">
                                        <input class="form-control form-control-solid" type="text" name="SiraNo" placeholder="" value="@Model.SiraNo" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">Görsel Yükle</label>
                                    <div class="col-9">
                                        <input type="file" name="GorselYukle" value="" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">Görsel</label>
                                    <div class="col-9">
                                        <input type="hidden" name="Gorsel" value="@Model.Gorsel" />
                                        <img style="width:50%" src="~/kll-assets/image/ekip/@(Model.Gorsel)" alt="Alternate Text" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">İçerik</label>
                                    <div class="col-9">
                                        <textarea id="Icerik" class="form-control form-control-solid" name="Icerik">@Model.Icerik</textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3"></label>
                                    <div class="col-3">
                                        <button style="width:100%" type="submit" class="btn btn-success">Kaydet</button>
                                    </div>
                                    <div class="col-3">
                                        <a href="~/Admin/Ekip" class="btn btn-danger" style="width:100%">Vazgeç</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-2"></div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
        <!--end: Code-->
    </div>
    <!--end::Container-->
</div>
