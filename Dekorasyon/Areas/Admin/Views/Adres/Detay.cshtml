@model Adres
@{
    ViewBag.Title = "Detay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom card-sticky" id="kt_page_sticky_card">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">
                        Adres İşlemleri
                        <i class="mr-2"></i>
                        <small class=""></small>
                    </h3>
                </div>
            </div>
            <div class="card-body">
                <!--begin::Form-->
                <form class="form" method="post">
                    <div class="row">
                        <div class="col-xl-2"></div>
                        <div class="col-xl-8">
                            <div class="my-5">
                                @if (ViewBag.Basari != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.Basari
                                    </div>
                                }
                                @if (ViewBag.Hata != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.Hata
                                    </div>
                                }
                                <div class="form-group row">
                                    <label class="col-3">Tanım</label>
                                    <div class="col-9">
                                        <input class="form-control form-control-solid" type="text" name="Tanım" placeholder="" value="@Model.Tanım" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">Adres</label>
                                    <div class="col-9">
                                        <textarea class="form-control form-control-solid" name="Adresler">@Model.Adresler</textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3">Durum / Sıra No</label>
                                    <div class="col-5">
                                        <select class="form-control form-control-solid" name="Durum">
                                            <option @(Model.Durum == 1) value="1">Aktif</option>
                                            <option @(Model.Durum == 2) value="2">Pasif</option>
                                        </select>
                                    </div>
                                    <div class="col-4">
                                        <input class="form-control form-control-solid" type="text" name="SiraNo" placeholder="" value="@Model.SiraNo" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-3"></label>
                                    <div class="col-3">
                                        <button style="width:100%" type="submit" class="btn btn-success">Kaydet</button>

                                    </div>
                                    <div class="col-3">
                                        <a href="~/Admin/Adres" class="btn btn-danger" style="width:100%">Vazgeç</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-2"></div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
        <!--end: Code-->
    </div>
    <!--end::Container-->
</div>
